<%- include('partials/header') %>

<div class="a">
<br>
<h1>Bus Stops</h1>
        <br></br>
		<div class="f">
		
		   
			<form class="form-inline" id="form" action="/fare/search" method="POST" >
				<input class="form-control mr-sm-2" type="text" placeholder="Search by name" aria-label="Search" name="n">
				
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			</form>
			
		</div>
		
         <div class="flt">
		       <a href="/fare/new"><button class="btn btn-success">Add new Stop</button></a>
         </div>		 
		
		<div id="table1">
		
				<table class="table">
						  <thead class="thead-light">
							<tr>
							  
							  <th scope="col">Stop No</th>
							  <th scope="col">Longitutde</th>
							  <th scope="col">Latitude</th>
							  <th scope="col"  style="align:center">Name</th>
							  <th scope="col"></th>
							  <th scope="col"></th>
							  
							 
							</tr>
						  </thead>
						  <tbody>
						  <%
						 
						  key.forEach(function(key)
						  {%>
						  <tr>
							
							<td><%= key %></td>
							<td><%= value[key].long %></td>
							<td><%= value[key].lat %></td>
							<td><%= value[key].name %></td>
							<td style="padding-top:5px"><a href="/fare/<%= key %>"><button class="btn btn-success">Edit</button></a></td>
							  <td><a id="exc" href="/fare/<%= key %>/delete"> <i class="fa fa-times"></i></a></td>
						  </tr>
						  
						   <%
						   
						   });%>
						 </tbody>
				</table>
		
		
		
		</div>
</div>


